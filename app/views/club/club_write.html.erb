        </select>
        -->
        <br>
      
      <!-- 
      <div class="form-group">
        <label for="formGroupExampleInput">소속 단과 대학 번호 입력</label>
        <input type="number" class="form-control" id="formGroupExampleInput" placeholder="1. 공대 2. 외대 3. 예대 4. 체대 5. 국제대학 6.자대 7.생대"  name="univ_id" min="1" max="7" required>
