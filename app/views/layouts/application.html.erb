    /*회원가입 css*/
    
  .nav-item{
     background-color : gray;
   
     
    }
  .nav-link{
    color: white;
    font-size:15px;
  }
  .nav-header {
      height: 50px;
      background: #eeeeee;
      padding-top: 14px;
      font-size: 13px
      
      }
      
    /*메뉴 css*/
  .menu, .nav-submenu{
      background-color: #c43b54;
      text-align: center;
      font-size:18px;
      color: white;
  }
  .menu{
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* 드롭다운 했을때 나오는메뉴 css */
  .menu ul ul{
    display:none;
    background-color: #c43b54;
    font-size:15px;
    color: white;
    position: absolute;
  }
  
  .menu ul li:hover ul{
    display:block;
    
  }
  
