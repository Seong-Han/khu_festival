</head>
<body style="overflow-x:hidden">
  
    <div class="header">
        <div class="first">
          <ul class="nav justify-content-end" >
             
            <% if user_signed_in? %>
            <li class="nav-item" style="width:80px; color:white;  padding:10px 0 10px 15px; font-size:20px; line-height:30px">
              <%= current_user.name %>
            </li>
                <% if current_user.admin %>
                  <li class="nav-item" style="font-size:20px; padding:10px 7px;  line-height:30px">
                    <%# <a class="nav-link" href="/users/sign_out">로그아웃</a> %>
                     <%= link_to '글쓰기', club_write_path %></li>
                  </li>
                  <% end %>
            <li class="nav-item" style="font-size:20px;  padding:10px 7px; line-height:30px;">
              <%# <a class="nav-link" href="/users/sign_out">로그아웃</a> %>
               <%= link_to '로그아웃', destroy_user_session_path, method: 'delete' %></li>
            </li>
            
            <% else %>
            <li class="nav-item" style="width:90px; color:white;  padding:10px 0 10px 15px; font-size:20px">
              <a class="nav-link" href="/users/sign_in">로그인</a>
            </li>
            <li class="nav-item" style="font-size:20px;  padding:10px 7px;">
              <a class="nav-link" href="/users/sign_up">회원가입</a>
            </li>
            <% end %>
          </ul>
        </div>
        <div class="menu">
          <ul class="container nav nav-pills">
            <li role="presentation"><a class="nav-submenu" href="/festival/index">Home</a></li>
